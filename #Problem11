/*
fill two 3x3 matrices with random numbers, then check if these matrices are equal to each other.
*/



fun areMatrixEqual(matrix1:Array<Array<Int>>,matrix2:Array<Array<Int>>, rows:Int, cols:Int): Boolean
{
    return sumMatrix(matrix1,3,3) == sumMatrix(matrix2,3,3)
}

fun main()
{
    val matrix1 = fillMatrixWithRandomNumbers(3,3, 1, 100)
    val matrix2 = fillMatrixWithRandomNumbers(3,3, 1, 100)

    printMatrixElements(matrix1,3,3)
    printMatrixElements(matrix2,3,3)

    if (areMatrixEqual(matrix1, matrix2, 3,3))
    {
        println("Yes, the matrices are equal each other.")
    }
    else
    {
        println("No, the matrices are not equal each other.")
    }
}
