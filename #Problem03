/*
fill a 3x3 matrix with random numbers, then store each row sum in array index.
*/
Note : some functions imported from the previous problems.

package com.example.problemsolvinglevel01_kotlin

import android.opengl.Matrix

fun sumEachRowInArray(matrix: Array<Array<Int>>, rows:Int, cols:Int): Array<Int>
{
    val arrSum = Array(rows) {0}
    for (i in 0 until rows)
    {
        arrSum[i] = rowSum(matrix, i, cols)
    }

    return arrSum
}

fun printEachRowSumInArray(arrSum:Array<Int>, rows: Int, cols: Int)
{
    println("\nThe the following are the sum of each row in the matrix: ")
    for (i in 0 until cols)
    {
        println("Row ${i+1} sum = ${arrSum[i]}")
    }
}

fun main()
{
    val matrix = fillMatrixWithRandomNumbers(3, 3)
    val arrSum = sumEachRowInArray(matrix, 3, 3)

    printMatrixElements(matrix, 3, 3)
    printEachRowSumInArray(arrSum, 3, 3)
}
