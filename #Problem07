/*
fill a 3x3 matrix with ordered numbers, then transpose this matrix.
*/


fun transposeMatrix(matrix: Array<Array<Int>>, rows:Int, cols:Int): Array<Array<Int>>
{
    val transposedMatrix = Array(rows) { Array(cols) {0} }
    var counter = 0

    for (i in 0 until rows)
    {
        for (j in 0 until cols)
        {
            transposedMatrix[j][i] = matrix[i][j]
        }
    }
    return transposedMatrix
}

fun main()
{
    val matrix = fillMatrixWithOrderedNumbers(3,3)
    val transposedMatrix = transposeMatrix(matrix,3, 3)
    println("The following are normal matrix elements: ")
    printMatrixElements(matrix, 3,3)

    println("The following are transpose matrix elements: ")
    printMatrixElements(transposedMatrix, 3,3)

}
