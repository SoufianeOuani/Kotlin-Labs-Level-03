fun countNumberInMatrix(matrix:Array<Array<Int>>, rows:Int, cols:Int, numberToCheck:Int):Int
{
    var counter = 0
    for (i in 0 until rows)
    {
        for (j in 0 until cols)
        {
            if (numberToCheck == matrix[i][j])
            {
                counter++
            }
        }
    }
    return counter
}

fun main()
{
    val matrix = fillMatrixWithRandomNumbers(3,3,1,10)
    printMatrixElements(matrix, 3, 3)

    print("\nEnter a number to check: ")
    val numberToCheck = readln().toInt()

    var numberFrequency = countNumberInMatrix(matrix, 3, 3, numberToCheck)
    println("The number $numberToCheck frequency = $numberFrequency")

}
