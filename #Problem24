fun upperFirstLetterOfEachWord(text: String)
{
    var str = text
    var isFirstLetter = true

    for (i in 0 until str.length)
    {
        if (str[i] != ' ' && isFirstLetter)
        {
            println(str[i].uppercase())
        }
        isFirstLetter = str[i] == ' '
    }
}

fun main()
{
    println("Please enter a text: ")
    val text = readln()
    upperFirstLetterOfEachWord(text)
}
