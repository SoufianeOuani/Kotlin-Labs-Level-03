/*
fill a 3x3 matrix with random numbers, then store each column sum in array index.
*/

package com.example.problemsolvinglevel01_kotlin

fun sumEachColumnInArray(matrix: Array<Array<Int>>, rows:Int, cols:Int): Array<Int>
{
    val arrSum = Array(rows) {0}
    for (i in 0 until rows)
    {
        arrSum[i] = columnSum(matrix, i, cols)
    }

    return arrSum
}

fun printEachColumnSumInArray(arrSum:Array<Int>, rows: Int, cols: Int)
{
    println("\nThe the following are the sum of each column in the matrix: ")
    for (i in 0 until cols)
    {
        println("Row ${i+1} sum = ${arrSum[i]}")
    }
}

fun main()
{
    val matrix = fillMatrixWithRandomNumbers(3, 3)
    val arrSum = sumEachColumnInArray(matrix, 3, 3)

    printMatrixElements(matrix, 3, 3)
    printEachColumnSumInArray(arrSum, 3, 3)
}
