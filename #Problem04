/*
fill a 3x3 matrix with random numbers, then sum each column.
*/

package com.example.problemsolvinglevel01_kotlin

fun columnSum(matrix: Array<Array<Int>>, colNumber:Int, rows:Int):Int
{
    var sum = 0
    for (i in 0 until rows)
    {
        sum += matrix[i][colNumber]
    }
    return sum
}

fun printEachColumnSum(matrix: Array<Array<Int>>, rows:Int)
{
    println("\nThe the following are the sum of each column in the matrix:")
    for (i in 0 until rows)
    {
        println("Column ${i+1} sum = ${columnSum(matrix, i, rows)}")
    }
}

fun main()
{
    val matrix = fillMatrixWithRandomNumbers(3, 3)
    printMatrixElements(matrix, 3, 3)

    printEachColumnSum(matrix, 3)
}
